<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wear_info_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <android.support.wearable.view.WearableFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="visible">

        <ScrollView
            android:id="@+id/wear_info_scroll_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/wear_info_imageView01"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:contentDescription="@string/default_icon"
                    android:src="@drawable/amazmod" />

                <TextView
                    android:id="@+id/wear_info_timeSLC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp"
                    android:textAlignment="center"
                    android:textColor="#FFFFFFFF"
                    android:textSize="16sp"
                    tools:text="TextView" />

                <TextView
                    android:id="@+id/wear_info_build"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp"
                    android:textAlignment="center"
                    android:textColor="#FFFFFFFF"
                    android:textSize="16sp"
                    tools:text="TextView" />

                <TextView
                    android:id="@+id/wear_info_textView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp"
                    android:textAlignment="center"
                    android:textColor="#FFFFFFFF"
                    android:textSize="16sp"
                    tools:text="TextView" />

                <TextView
                    android:id="@+id/wear_info_textView03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp"
                    android:textAlignment="center"
                    android:textColor="#FFFFFFFF"
                    android:textSize="16sp"
                    tools:text="TextView" />

                <TextView
                    android:id="@+id/wear_info_textView04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp"
                    android:textAlignment="center"
                    android:textColor="#FFFFFFFF"
                    android:textSize="16sp"
                    tools:text="TextView" />

                <TextView
                    android:id="@+id/wear_info_textView05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp"
                    android:textAlignment="center"
                    android:textColor="#FFFFFFFF"
                    android:textSize="16sp"
                    tools:text="TextView" />

                <Button
                    android:id="@+id/wear_info_buttonClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textAlignment="center"
                    tools:text="Button" />
            </LinearLayout>
        </ScrollView>
    </android.support.wearable.view.WearableFrameLayout>
</android.support.wearable.view.BoxInsetLayout>