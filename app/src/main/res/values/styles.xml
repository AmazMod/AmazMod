<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <!-- Dark theme -->
    <style name="AppThemeDark" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textColorHighlight">@color/text_light_opaque</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
    </style>

    <style name="AppThemeDark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeDark.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    <style name="AppThemeDark.PopupOverlay" parent="ThemeOverlay.MaterialComponents" />

    <!-- Dark theme for android-file-chooser -->
    <style name="FileChooserStyle_Dark" parent="FileChooserStyle">
        <item name="android:textColorHighlight">@color/text_light_opaque</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="fileChooserDialogStyle">@style/FileChooserDialogStyle_Dark</item>
        <item name="fileChooserListItemStyle">@style/FileChooserListItemStyle_Dark</item>
        <item name="fileChooserPathViewStyle">@style/FileChooserPathViewStyle_Dark</item>
        <item name="fileChooserNewFolderStyle">@style/FileChooserNewFolderStyle_Dark</item>
    </style>

    <style name="FileChooserDialogStyle_Dark" parent="FileChooserDialogStyle">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:background">@color/background_dark_dark</item>
        <item name="android:windowTitleStyle">@style/FileChooserTitleStyle_Dark</item>
        <item name="android:buttonBarButtonStyle">@style/FileChooserButtonStyle_Dark</item>
    </style>

    <style name="FileChooserTitleStyle_Dark" parent="FileChooserTitleStyle">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="FileChooserButtonStyle_Dark" parent="FileChooserButtonStyle">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="FileChooserListItemStyle_Dark" parent="FileChooserListItemStyle">
        <item name="fileChooserTextNameStyle">@style/FileChooserTextNameStyle_Dark</item>
        <item name="fileChooserTextSizeStyle">@style/FileChooserTextSizeDateStyle_Dark</item>
        <item name="fileChooserTextDateStyle">@style/FileChooserTextSizeDateStyle_Dark</item>
        <item name="android:background">@color/background</item>
        <item name="fileListItemSelectedTint">@color/li_row_background_tint_dark</item>
        <item name="fileListItemFocusedDrawable">@drawable/listview_item_selector_dark</item>
    </style>

    <style name="FileChooserTextNameStyle_Dark" parent="FileChooserTextNameStyle">\
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="FileChooserTextSizeDateStyle_Dark" parent="FileChooserTextSizeStyle">
        <item name="android:textColor">@color/text_light_opaque</item>
    </style>

    <style name="FileChooserPathViewStyle_Dark" parent="FileChooserPathViewStyle">
        <item name="android:background">@color/background_dark_dark</item>
        <item name="android:textColor">@color/text_light_opaque</item>
    </style>

    <style name="FileChooserNewFolderStyle_Dark" parent="FileChooserNewFolderStyle">
        <item name="fileChooserNewFolderOverlayColor">@color/overlay_dark</item>
        <item name="fileChooserNewFolderBackgroundColor">@color/background_dark</item>
        <item name="fileChooserNewFolderTextColor">@color/text_light</item>
    </style>

    <!-- Light theme for android-file-chooser -->
    <style name="FileChooserStyle_Light" parent="FileChooserStyle">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fileChooserDialogStyle">@style/FileChooserDialogStyle_Light</item>
        <item name="fileChooserListItemStyle">@style/FileChooserListItemStyle_Light</item>
        <item name="fileChooserPathViewStyle">@style/FileChooserPathViewStyle_Light</item>
        <item name="fileChooserNewFolderStyle">@style/FileChooserNewFolderStyle_Light</item>
    </style>

    <style name="FileChooserDialogStyle_Light" parent="FileChooserDialogStyle">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:windowTitleStyle">@style/FileChooserTitleStyle_Light</item>
        <item name="android:buttonBarButtonStyle">@style/FileChooserButtonStyle_Light</item>
    </style>

    <style name="FileChooserTitleStyle_Light" parent="FileChooserTitleStyle">
    </style>

    <style name="FileChooserButtonStyle_Light" parent="FileChooserButtonStyle">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="FileChooserListItemStyle_Light" parent="FileChooserListItemStyle">
        <item name="fileChooserTextNameStyle">@style/FileChooserTextNameStyle_Light</item>
        <item name="fileChooserTextSizeStyle">@style/FileChooserTextSizeDateStyle_Light</item>
        <item name="fileChooserTextDateStyle">@style/FileChooserTextSizeDateStyle_Light</item>
        <item name="fileListItemSelectedTint">@color/li_row_background_tint_light</item>
        <item name="fileListItemFocusedDrawable">@drawable/listview_item_selector_light</item>
    </style>

    <style name="FileChooserTextNameStyle_Light" parent="FileChooserTextNameStyle">\
        <item name="android:textColor">@color/background_dark_dark</item>
    </style>

    <style name="FileChooserTextSizeDateStyle_Light" parent="FileChooserTextSizeStyle">
        <item name="android:textColor">@color/background_dark</item>
    </style>

    <style name="FileChooserPathViewStyle_Light" parent="FileChooserPathViewStyle">
    </style>

    <style name="FileChooserNewFolderStyle_Light" parent="FileChooserNewFolderStyle">
        <item name="fileChooserNewFolderTextColor">@color/background_dark_dark</item>
    </style>

</resources>
